<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Danh sách bài viết</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Tiêu đề
                            </th>
                            <th>
                                Chủ đề
                            </th>
                            <th>
                                Người gửi
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th>
                                Chỉnh sửa
                            </th>
                            </thead>
                            <tbody>
                            {{#each baiviet}}
                                <tr>
                                    <td>{{this.tenbaiviet}}</td>
                                    <td>{{this.tentheloai}}</td>
                                    <td>{{this.hoten}}</td>
                                    <td id="tt">{{this.trangthai}}</td>
                                    <td>
                                        <div class="update ml-auto mr-auto">
                                            <a href="/baiviet/edit/{{this.id}}">
                                                <button id="btnEditPost" name=btnEditPost" type="submit"
                                                        class="btn btn-primary btn-square" readonly>Chỉnh sửa
                                                </button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>