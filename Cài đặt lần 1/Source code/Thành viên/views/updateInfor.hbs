<section class="contact_area p_120">
    <div class="container">
        <h1>Cập nhật thông tin cá nhân</h1>
        <br><br>
        <div class="row">
            <div class="col-lg-12">
                <form class="row contact_form" method="post" action="/updateUser/{{user.id}}">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input value="{{user.ngaysinh}}" type="date" class="form-control" id="ngaysinh"
                                   name="ngaysinh" required>
                        </div>
                        <div class="form-group">
                            <label>Tên đầy đủ</label>
                            <input value="{{user.hoten}}" type="text" class="form-control" id="hoten" name="hoten">
                        </div>
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input value="{{user.tendangnhap}}" type="text" class="form-control" id="tendangnhap"
                                   name="tendangnhap" required>
                        </div>
                        <div class="form-group">
                            <label>Trình độ học vấn</label>
                            <input value="{{user.trinhdohocvan}}" type="text" class="form-control" id="trinhdohocvan"
                                   name="trinhdohocvan" required>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="btn submit_btn">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
