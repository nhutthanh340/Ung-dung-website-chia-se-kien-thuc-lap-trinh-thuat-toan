<section class="contact_area p_120">
    <div class="container">
        <h1>Gửi bài viết</h1>
        <br><br>
        <div class="row">
            <div class="col-lg-12">
                <form class="row contact_form" method="post">
                    <div class="col-md-12">
                        <label>Nhập tên bài viết</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="tenbaiviet" name="tenbaiviet"
                                   placeholder="Nhập tên bài viết" required>
                        </div>
                        <label>Chọn chủ đề</label>
                        <div class="form-group">
                            <select class="form-control" name="idtheloaibaiviet" required>
                                {{#each type}}
                                    <option value="{{this.id}}">{{this.tentheloai}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Thông tin người gửi</label>
                            <input value="{{user.email}}" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>Tóm tắt nội dung bài viết</label>
                        <div class="form-group">
                            <textarea class="form-control" name="tomtat" id="tomtat" rows="1"
                                      placeholder="Tòm tắt ội dung" required></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>Nhập nội dung bài viết</label>
                        <div class="form-group">
                            <textarea class="form-control" name="noidung" id="noidung" rows="1"
                                      placeholder="Nội dung" required></textarea>
                        </div>
                    </div>
                    <input name="trangthai" type="hidden" class="form-control" value="Chưa xác nhận">
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="btn submit_btn">Gửi đến chúng tôi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
