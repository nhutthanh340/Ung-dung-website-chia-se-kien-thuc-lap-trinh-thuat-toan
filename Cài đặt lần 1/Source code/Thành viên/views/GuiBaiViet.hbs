<section class="contact_area p_120">
    <div class="container">
        <h1>Gửi bài viết</h1>
        <br><br>
        <div class="row">
            <div class="col-lg-12">
                <form class="row contact_form">
                    <div class="col-md-12">
                        <label>Nhập tên bài viết</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name"
                                   placeholder="Nhập tên bài viết">
                        </div>
                        <div class="form-group">
                            <label>Chọn chủ đề</label>
                            <select class="form-control">
                                <option value="">Trí tuệ nhân tạo</option>
                                <option value="">Ngôn ngữ lập trình</option>
                                <option value="">Kiến thức chung lập trình</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <br><br>
                            <label>Thông tin người gửi</label>
                            <input value="{{user.email}}" type="text" class="form-control" id="subject" name="subject"
                                   placeholder="Nhập tên người gửi">
                        </div>
                        <div class="form-group">
                            <label>Nhập ngày gửi</label>
                            <input type="date" class="form-control" id="subject" name="subject"
                                   placeholder="Ngày gửi">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>Nhập nội dung bài viết</label>
                        <div class="form-group">
                            <textarea class="form-control" name="message" id="message" rows="1"
                                      placeholder="Nội dung"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="btn submit_btn">Gửi đến chúng tôi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
